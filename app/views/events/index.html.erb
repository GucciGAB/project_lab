<h1>Events#index</h1>
<%= link_to 'New Event', new_event_path %>
<table border=1>
    <thead>
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Location</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
        <tr>
          <td> <%= event.title %> </td>
          <td> <%= event.content %> </td>
          <td> <%= event.location %> </td>
          <td> <%= event.start_date %> </td>
          <td> <%= event.end_date %> </td>

          <td> <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' %> </td>
  
          <td> <%= link_to 'Destroy', event_path(event), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %> </td>
        </tr>
      <% end %>
    </tbody>
</table>